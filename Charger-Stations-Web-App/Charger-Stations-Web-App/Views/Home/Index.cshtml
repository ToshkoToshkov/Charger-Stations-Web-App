@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

@{
    var chargers = Model.Chargers;
    var firstCharger = chargers.Any() ? chargers[0] : null;
    var secondCharger = chargers.Count > 1 ? chargers[1] : null;
    var thirdCharger = chargers.Count > 2 ? chargers[2] : null;
}

@if (!chargers.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for chargers</h1>
        <p class="lead">There are no chargers in the system currently available so why don't you just add one?</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Chargers" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Charger</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner" >
        @if(firstCharger != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstCharger.ImageURL" alt="@firstCharger.Category - @firstCharger.Model" />
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Chargers" asp-action="Details" asp-route-id="@firstCharger.Id">@firstCharger.Category (@firstCharger.Model)</a></h5>
                </div>
            </div>
        }
        @if (secondCharger != null)
        {
            <div class="carousel-item">
                <img src="@secondCharger.ImageURL" class="d-block w-100" alt="@secondCharger.Category - @secondCharger.Model" />
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Chargers" asp-action="Details" asp-route-id="@secondCharger.Id">@secondCharger.Category (@secondCharger.Model)</a></h5>
                </div>
            </div>
        }
        @if (thirdCharger != null)
        {
            <div class="carousel-item">
                <img src="@thirdCharger.ImageURL" class="d-block w-100" alt="@thirdCharger.Category - @thirdCharger.Model" />
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Chargers" asp-action="Details" asp-route-id="@thirdCharger.Id">@thirdCharger.Category (@thirdCharger.Model)</a></h5>
                </div>
            </div>
        }
    </div>

    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-6 text-center">
            @Model.TotalChargers Chargers
        </h2>

        <h2 class="col-md-6 text-center">
            @Model.TotalUsers Users
        </h2>
    </div>
</div>
